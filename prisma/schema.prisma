generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model discounts {
  id           Int              @id @default(autoincrement())
  amount       Float
  customerTags String?
  productTags  String?
  status       String
  discountType discountTypeEnum @default(percentage)
  discountId   String
  endsAt       DateTime
  startsAt     DateTime
  title        String
}

enum discountTypeEnum {
  percentage
  fixedAmount
}

model session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model shopifyFunction {
  id       String @id
  title    String
  api_type String
}

model orders {
  id               Int      @id @default(autoincrement())
  store            String
  discount_code_id Int
  discount_code    String
  date             DateTime
  order_id         BigInt
  order_total      Float
  discount_total   Float
}
