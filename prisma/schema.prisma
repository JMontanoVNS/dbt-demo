generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model discounts {
  id           Int                     @id @default(autoincrement())
  amount       Float
  customerTags String?
  productTags  String?
  status       String
  discountType discountTypeEnum        @default(percentage)
  discountId   String
  endsAt       DateTime
  startsAt     DateTime
  title        String
  conditional  discountConditionalEnum @default(OR)
}

enum discountTypeEnum {
  percentage
  fixedAmount
}

enum discountConditionalEnum {
  OR
  AND
}

model session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model shopifyFunction {
  id       String @id
  title    String
  api_type String
}

model orders {
  id             Int      @id @default(autoincrement())
  order_id       String
  order_total    String
  discount_total String
  line_items     Json
  date           DateTime
  shop           String
}
